  <script>
    // The message to show (user requested text)
    const messageText = "the working hands for others peace is so beautiful";

    const btn = document.getElementById('clickBtn');
    const msg = document.getElementById('message');

    let shown = false;
    btn.addEventListener('click', () => {
      if(shown) {
        // toggle hide if clicked again
        msg.classList.remove('show');
        msg.innerHTML = '';
        btn.setAttribute('aria-expanded','false');
        shown = false;
        return;
      }

      // reveal animated text
      msg.classList.add('show');
      // create typed span
      const typed = document.createElement('span');
      typed.className = 'typed';
      typed.textContent = messageText;
      msg.innerHTML = ''; // clear
      msg.appendChild(typed);
      btn.setAttribute('aria-expanded','true');
      shown = true;

      // remove typing caret after animation ends (approx)
      setTimeout(()=> {
        typed.style.borderRight = '0';
      }, 3800);
    });

    // Accessibility: allow Enter/Space on button to trigger
    btn.addEventListener('keydown', (e) => {
      if(e.key === 'Enter' || e.key === ' ') { e.preventDefault(); btn.click(); }
    });
  </script>
